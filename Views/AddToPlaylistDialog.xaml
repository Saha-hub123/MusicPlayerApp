<Window x:Class="MusicPlayerApp.Views.AddToPlaylistDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add to Playlist" Height="450" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Border Background="#1F2945" CornerRadius="12" BorderBrush="#3E4C6E" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Add to Playlist" Foreground="White" 
                       FontSize="18" FontWeight="Bold" Margin="0 0 0 15"/>

            <StackPanel Grid.Row="1" Margin="0 0 0 15">
                <Button Content="+ Create New Playlist" Click="CreateNew_Click"
                        Background="Transparent" Foreground="#5CD1FF"
                        BorderThickness="1" BorderBrush="#5CD1FF"
                        Padding="10 8" Cursor="Hand" Margin="0 0 0 10">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Border Background="#2A3550" CornerRadius="8" Padding="10 8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="🔍" Foreground="#6F7A95" Margin="0 0 8 0"/>
                        <TextBox x:Name="SearchBox" Grid.Column="1" 
                                 Background="Transparent" BorderThickness="0" 
                                 Foreground="White" CaretBrush="White"
                                 FontSize="14" VerticalContentAlignment="Center"
                                 TextChanged="SearchBox_TextChanged"/>
                        <TextBlock Text="Search playlists..." Grid.Column="1"
                                   IsHitTestVisible="False" Foreground="#6F7A95"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
            </StackPanel>

            <ListView Grid.Row="2" x:Name="PlaylistList"
                      Background="Transparent" BorderThickness="0"
                      Margin="0 0 0 15"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="10 8" Margin="0 2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Path Data="M15 6H3v2h12V6zm0 4H3v2h12v-2zM3 16h8v-2H3v2z" 
                                                  Fill="#6F7A95" Stretch="Uniform" Width="16" Height="16" HorizontalAlignment="Left"/>

                                            <TextBlock Grid.Column="1" Text="{Binding Name}" Foreground="White" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2A3550"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#3E4C6E"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Grid.Row="3" Content="Cancel" Click="Cancel_Click"
                    HorizontalAlignment="Center"
                    Background="Transparent" Foreground="#AEB7D3" BorderThickness="0"
                    Cursor="Hand"/>
        </Grid>
    </Border>
</Window>