<Window x:Class="MusicPlayerApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Music Player"
        Height="750" Width="1200"
        Background="#1F2945"
        WindowStartupLocation="CenterScreen">

    <!-- ========= RESOURCES (STYLE) ========= -->
    <Window.Resources>

        <!-- Style tombol di sidebar -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0 3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"
                                              Margin="10 0 0 0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A3550"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style item list lagu -->
        <Style x:Key="MusicListItemStyle" TargetType="ListViewItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0 4"/>
            <Setter Property="Background" Value="#2A3550"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#36405F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--slider-->
        <Style x:Key="ModernSliderThumbStyle" TargetType="{x:Type Thumb}">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Ellipse Width="12" Height="12" Fill="White" StrokeThickness="0"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernSliderStyle" TargetType="{x:Type Slider}">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Slider}">
                        <Grid VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border x:Name="TrackBackground"
                                Height="4" 
                                CornerRadius="2" 
                                Background="#3E4C6E" 
                                VerticalAlignment="Center"/>

                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.DecreaseLarge}">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="{x:Type RepeatButton}">
                                                <Border Height="4" CornerRadius="2" Background="#5CD1FF" />
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>

                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ModernSliderThumbStyle}" 
                                       VerticalAlignment="Center"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--button action-->
        <Style x:Key="IconButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PlayButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}" Width="50" Height="50">
                                <Ellipse.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3" Color="Black"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- ========= LAYOUT UTAMA ========= -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <!-- Sidebar -->
            <ColumnDefinition/>
            <!-- Konten utama -->
        </Grid.ColumnDefinitions>

        <!-- ========== SIDEBAR ========== -->
        <Border Grid.Column="0" Background="#1B2338">
            <StackPanel Margin="20">
                <!-- Judul / Nama user -->
                <TextBlock Text="Rihanna"
                           FontSize="22"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0 10"/>

                <!-- BROWSE -->
                <TextBlock Text="Browse"
                           Foreground="#6F7A95"
                           FontSize="12"
                           Margin="0 20 0 5"/>

                <Button Content="Discover"   Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="Songs"      Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="Top charts" Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="Artist"     Style="{StaticResource SidebarButtonStyle}" />

                <!-- PLAYLIST -->
                <TextBlock Text="Playlist"
                           Foreground="#6F7A95"
                           FontSize="12"
                           Margin="0 25 0 5"/>

                <Button Content="Favourite" Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="Recent"    Style="{StaticResource SidebarButtonStyle}" />

                <!-- MY MUSIC -->
                <TextBlock Text="My music"
                           Foreground="#6F7A95"
                           FontSize="12"
                           Margin="0 25 0 5"/>

                <Button Content="High is hope"  Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="Shape of you"  Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="All we know"   Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="Import Lagu dari Folder" Width="200" Height="40" Click="ImportSongs_Click"/>
            </StackPanel>
        </Border>

        <!-- ========== KONTEN UTAMA ========== -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="220"/>
                <!-- New releases -->
                <RowDefinition Height="Auto"/>
                <!-- Title "New played" -->
                <RowDefinition/>
                <!-- List lagu -->
                <RowDefinition Height="70"/>
                <!-- Bottom player -->
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0 0 0 20">
                <TextBlock Text="Search Music" 
                   FontSize="24" 
                   Foreground="White" 
                   FontWeight="Bold" 
                   Margin="0 0 0 15"/>

                <Border Background="#2A3550" 
                    CornerRadius="20" 
                    Padding="15 8" 
                    Width="400" 
                    HorizontalAlignment="Left"> 

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="🔍" 
                       Foreground="#AEB7D3" 
                       VerticalAlignment="Center" 
                       Margin="0 0 10 0"/>

                        <TextBox x:Name="SearchBox"
                     Grid.Column="1"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="White"
                     FontSize="14"
                     CaretBrush="White"
                     VerticalContentAlignment="Center"
                     TextChanged="SearchBox_TextChanged" 
                     Tag="Search songs or artists..."/>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- NEW RELEASES + FOTO ARTIS -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="320"/>
                </Grid.ColumnDefinitions>

                <!-- New Releases -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="New Songs Added"
                               FontSize="20"
                               Foreground="White"
                               Margin="0 0 0 10"/>

                    <StackPanel Orientation="Horizontal">
                        <!-- Kartu dummy -->
                        <Border Width="120" Height="150" Margin="0 0 10 0"
                                Background="#2A3550" CornerRadius="15">
                            <StackPanel VerticalAlignment="Bottom" Margin="10" >
                                <TextBlock Text="Rihanna" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Text="Singer"  Foreground="#AEB7D3" FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <Border Width="120" Height="150" Margin="0 0 10 0"
                                Background="#2A3550" CornerRadius="15"/>

                        <Border Width="120" Height="150"
                                Background="#2A3550" CornerRadius="15"/>
                    </StackPanel>
                </StackPanel>

                <!-- Foto artis besar (dummy) -->
                <Border Grid.Column="1"
                        Background="#2A3550"
                        CornerRadius="25"
                        Margin="20 0 0 0">
                    <TextBlock Text="Artist Image"
                               Foreground="#AEB7D3"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
            </Grid>

            <!-- Title New Played -->
            <TextBlock Grid.Row="2"
                       Text="New played"
                       FontSize="20"
                       Foreground="White"
                       Margin="0 20 0 10"/>

            <!-- List Lagu -->
            <ListView Grid.Row="3"
          x:Name="NewPlayedList"
          Background="Transparent"
          BorderThickness="0"
          ItemContainerStyle="{StaticResource MusicListItemStyle}"
          MouseDoubleClick="NewPlayedList_MouseDoubleClick">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="▶" Grid.Column="0" VerticalAlignment="Center"/>

                            <TextBlock Text="{Binding Title}" Grid.Column="1" Foreground="White"/>
                            <TextBlock Text="{Binding Artist}" Grid.Column="2" Foreground="#AEB7D3"/>

                            <TextBlock Text="{Binding DurationFormatted}"
                           Grid.Column="3"
                           HorizontalAlignment="Right"
                           Foreground="#AEB7D3"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>


            <!-- BOTTOM MINI PLAYER -->
            <Grid Grid.Row="4" Background="#151C30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>

                <Slider x:Name="ProgressSlider"
            Grid.Row="0" Grid.ColumnSpan="3"
            Style="{StaticResource ModernSliderStyle}" 
            Minimum="0" Maximum="100" Value="0"
            Cursor="Hand"
            IsMoveToPointEnabled="True"
            VerticalAlignment="Top"
            Margin="-5 -5 -5 0" 
            Height="16"
            PreviewMouseLeftButtonDown="ProgressSlider_PreviewMouseDown"
            PreviewMouseLeftButtonUp="ProgressSlider_PreviewMouseUp"
            MouseMove="ProgressSlider_MouseMove"/>
                <StackPanel Grid.Row="1" Grid.Column="0" 
                Orientation="Horizontal" Margin="20 0" 
                VerticalAlignment="Center">

                    <Ellipse x:Name="AlbumArtContainer" Width="45" Height="45">
                        <Ellipse.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.4" ShadowDepth="2"/>
                        </Ellipse.Effect>
                        <Ellipse.Fill>
                            <SolidColorBrush Color="#2A3550"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <StackPanel Margin="12 0" VerticalAlignment="Center">
                        <TextBlock Text="Judul Lagu" Foreground="White" 
                       FontWeight="SemiBold" FontSize="14"
                       x:Name="CurrentSongTitle"
                       TextTrimming="CharacterEllipsis" MaxWidth="160"/>

                        <TextBlock Text="Nama Artis" Foreground="#AEB7D3" 
                       FontSize="12" Margin="0 2 0 0"
                       x:Name="CurrentSongArtist"
                       TextTrimming="CharacterEllipsis" MaxWidth="160"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" 
                Orientation="Horizontal"
                HorizontalAlignment="Center" VerticalAlignment="Center">

                    <Button Style="{StaticResource IconButtonStyle}" 
                Width="35" Height="35" Margin="15 0" 
                Click="Prev_Click" ToolTip="Previous">
                        <Path Data="M 12,0 L 12,14 L 0,7 Z M 0,0 L 3,0 L 3,14 L 0,14 Z" 
                  Fill="#AEB7D3" Stretch="Uniform" Height="14" Width="14"/>
                    </Button>

                    <Button x:Name="PlayButton"
                Style="{StaticResource PlayButtonStyle}" 
                Margin="10 0" 
                Click="PlayPause_Click" ToolTip="Play/Pause">
                        <Path x:Name="PlayIcon"
                   Data="M 0,0 L 16,9 L 0,18 Z" 
                   Fill="#2A3550" Stretch="Uniform" 
                   Height="20" Width="20" Margin="4,0,0,0"/>
                    </Button>

                    <Button Style="{StaticResource IconButtonStyle}" 
                Width="35" Height="35" Margin="15 0" 
                Click="Next_Click" ToolTip="Next">
                        <Path Data="M 0,0 L 0,14 L 12,7 Z M 12,0 L 15,0 L 15,14 L 12,14 Z" 
                  Fill="#AEB7D3" Stretch="Uniform" Height="14" Width="14"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="2" 
                Orientation="Horizontal" 
                HorizontalAlignment="Right" VerticalAlignment="Center"
                Margin="0 0 20 0">

                    <TextBlock x:Name="CurrentTimeText" Text="0:00" 
                   Foreground="#AEB7D3" FontSize="12" FontWeight="Medium"/>

                    <TextBlock Text=" / " Foreground="#586380" FontSize="12" Margin="5 0"/>

                    <TextBlock x:Name="TotalTimeText" Text="0:00" 
                   Foreground="#AEB7D3" FontSize="12" FontWeight="Medium"/>

                </StackPanel>

            </Grid>

        </Grid>
    </Grid>
</Window>
